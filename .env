# monitoring-system/.env

# General Configuration
NODE_ENV=production

# API Gateway Configuration
GATEWAY_PORT=3000

# Auth Service Configuration
AUTH_SERVICE_PORT=3001
JWT_SECRET=your_secure_jwt_secret_key_change_this_in_production

# Monitoring Service Configuration
MONITORING_SERVICE_PORT=3002

# Notification Service Configuration
NOTIFICATION_SERVICE_PORT=3003

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=monitoring@example.com

# WhatsApp Configuration
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id

# Telegram Configuration
# Add your bot tokens here or in the notification service configuration

# Status Page Service Configuration
STATUS_PAGE_SERVICE_PORT=3004

# MongoDB Configuration
MONGO_URI=mongodb://mongo:27017
MONGO_USERNAME=admin
MONGO_PASSWORD=your_secure_password_change_this_in_production

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379